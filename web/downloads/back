CREATE TABLE "ESTUDIANTE" (
	"ID" NUMBER NOT NULL,
	"CODIGO" NUMBER NOT NULL,
	"NOMBRE" VARCHAR2(200) NOT NULL,
	"FECHA_INGRESO" DATE NOT NULL,
	"ELIMINADO" NUMBER NOT NULL,
	CONSTRAINT "ESTUDIANTE_PK" PRIMARY KEY("ID"),
	CONSTRAINT "ESTUDIANTE_UNQ_CODIGO" UNIQUE("CODIGO")

);
CREATE TABLE "MATERIA" (
	"ID" NUMBER NOT NULL,
	"CODIGO" NUMBER NOT NULL,
	"NOMBRE" VARCHAR2(200) NOT NULL,
	"DESCRIPCION" BLOB,
	CONSTRAINT "MATERIA_PK" PRIMARY KEY("ID"),
	CONSTRAINT "MATERIA_UNQ_CODIGO" UNIQUE("CODIGO")

);
CREATE TABLE "ESTUDIANTE_MATERIA" (
	"ID_ESTUDIANTE" NUMBER NOT NULL,
	"ID_MATERIA" NUMBER NOT NULL,
	"SEMESTRE" NUMBER NOT NULL,
	CONSTRAINT "ESTUDIANTE_MATERIA_PK" PRIMARY KEY("ID_ESTUDIANTE","ID_MATERIA"),
	CONSTRAINT "ESTUDIANTE_MATERIA_FK_EST" FOREIGN KEY ("ID_ESTUDIANTE") REFERENCES "ESTUDIANTE" ("ID"),
	CONSTRAINT "ESTUDIANTE_MATERIA_FK_MAT" FOREIGN KEY ("ID_MATERIA") REFERENCES "MATERIA" ("ID"),
	CONSTRAINT "ESTUDIANTE_MATERIA_FK_BOTH" FOREIGN KEY ("ID_ESTUDIANTE","ID_MATERIA") REFERENCES "ESTUDIANTE_MATERIA" ("ID_ESTUDIANTE","ID_MATERIA") ON DELETE CASCADE

);
CREATE TABLE "ASD" (
	"ASD" VARCHAR2(4000),
	CONSTRAINT "ASD_CK1" CHECK LENGTH(asd) >= 6

);

